{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "./",
        "module": "ESNext",
        "strict": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "moduleResolution": "Node",
        "isolatedModules": true,
        "target": "ESNext",
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "inlineSources": false,
        "lib": [
            "ESNext"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "types": [
            "node",
            "reflect-metadata"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "ts-node": {
        "compilerOptions": {},
        "esm": true,
        "experimentalResolver": true,
        "experimentalSpecifierResolution": "node",
        "moduleTypes": {},
        "require": [],
        "transpileOnly": true
    }
}